{
	"manifest_version": 2,

	"name": "Triad Ninox Scraper",
	"description": "A simple page-scraping extension for Chrome",
	"version": "1.0",
	"author": "@HunterBrady",

	"background": {
		"scripts": ["background.js", "jquery.min.js"],
		"persistent": true
	},
	
	"content_scripts": [{
		"matches": ["*://triad.relialytics.ninoxdb.com/*"],
		"js" : ["content.js"]
	}],
	"permissions": [
        "tabs",
        "http://*/",
        "https://*/"
    ],
	"browser_action": {
		"default_icon": "logo.png",
		"default_popup": "popup.html"
	}
}